# ===========================================
# SparkyAI Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -----------------------------
# OpenAI Configuration
# -----------------------------
OPENAI_API_KEY=sk-your-openai-key-here

# -----------------------------
# Langfuse (Observability)
# -----------------------------
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------------------
# MaximAI (Evaluation)
# -----------------------------
MAXIM_API_KEY=your-maxim-api-key

# -----------------------------
# Upstash Redis (FREE tier)
# Get these from: https://console.upstash.com
# -----------------------------
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# -----------------------------
# AWS S3 (Embeddings Storage)
# -----------------------------
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=sparky-ai-embeddings
AWS_REGION=us-east-1

# -----------------------------
# Budget Protection
# -----------------------------
DAILY_BUDGET_USD=2.00
MONTHLY_BUDGET_USD=30.00

# -----------------------------
# Agent Configuration
# -----------------------------
# Options: "personal" (SparkyAI) or "buzzy" (EasyBee demo)
AGENT_CONFIG=personal

# Conversation Memory
MAX_CONVERSATION_TOKENS=100000

# -----------------------------
# URLs (Development)
# -----------------------------
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# -----------------------------
# URLs (Production) - uncomment when deploying
# -----------------------------
# API_URL=https://api.sparky-ai.dev
# NEXT_PUBLIC_API_URL=https://api.sparky-ai.dev
# NEXT_PUBLIC_WS_URL=wss://api.sparky-ai.dev
